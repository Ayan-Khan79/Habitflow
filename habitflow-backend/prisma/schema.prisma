generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  name           String
  email          String          @unique
  password       String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  totalXP        Int             @default(0)
  habits         Habit[]         @relation("UserHabits")
  userChallenges UserChallenge[]
}

model Habit {
  id             Int           @id @default(autoincrement())
  userId         Int
  title          String
  description    String?
  frequency      String
  tags           String[]      @default([])
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  completedCount Int           @default(0)
  longestStreak  Int           @default(0)
  reminderTime   DateTime?
  user           User          @relation("UserHabits", fields: [userId], references: [id])
  trackingLogs   TrackingLog[]
}

model TrackingLog {
  id        Int      @id @default(autoincrement())
  habitId   Int
  date      DateTime
  createdAt DateTime @default(now())
  habit     Habit    @relation(fields: [habitId], references: [id])

  @@unique([habitId, date])
}

model Challenge {
  id             Int                  @id @default(autoincrement())
  title          String
  description    String?
  durationDays   Int
  rewardXP       Int?                 @default(0)
  icon           String?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  milestones     ChallengeMilestone[]
  userChallenges UserChallenge[]
}

model ChallengeMilestone {
  id          Int       @id @default(autoincrement())
  challengeId Int
  dayCount    Int
  badgeName   String
  challenge   Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)
}

model UserChallenge {
  id            Int                 @id @default(autoincrement())
  userId        Int
  challengeId   Int
  startDate     DateTime            @default(now())
  endDate       DateTime
  completedDays Int                 @default(0)
  status        ChallengeStatus     @default(ONGOING)
  progressLogs  ChallengeProgress[]
  challenge     Challenge           @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  user          User                @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChallengeProgress {
  id              Int           @id @default(autoincrement())
  userChallengeId Int
  date            DateTime
  isCompleted     Boolean       @default(false)
  userChallenge   UserChallenge @relation(fields: [userChallengeId], references: [id], onDelete: Cascade)

  @@unique([userChallengeId, date])
}

enum Frequency {
  daily
  weekly
  monthly
}

enum ChallengeStatus {
  ONGOING
  COMPLETED
  FAILED
}
